doctype html
html
	head
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='”viewport”', content='”width=1024,', minimal-ui”='')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name="twitter:card", content="summary_large_image")
		//title
		title= title
		meta(name="twitter:title", content=title)
		meta(property="og:title", content=title)
		//description
		if (page_description)
			meta(name="description", content=page_description)
			meta(property="og:description", content=page_description)
			meta(name="twitter:description" content=page_description)
		else
			meta(name="description", content="Giuseppe Bianchi - Front End and Mobile Apps Developer. Computer Science Student.")
			meta(name="twitter:description" content="Giuseppe Bianchi - Front End and Mobile Apps Developer. Computer Science Student.")
		//image
		if image_page
			meta(property="og:image", content=image_page)
			meta(name="twitter:image", content=image_page)
		else
			meta(property="og:image", content="/img/code.jpg")
			meta(name="twitter:image", content="/img/code.jpg")
